#!/bin/bash

if [ -f ~/.bashrc ]
then
  source ~/.bashrc
fi

if [ -f /home/devops/anaconda3/bin/ ]
then
  export PATH="/home/devops/anaconda3/bin:$PATH"
else
  source `conda info | grep 'base environment' | awk '{print $4}'`/etc/profile.d/conda.sh
fi
export PYTHONPATH="${PYTHONPATH}:${PWD}"
conda activate scanssd
cd src/server
uvicorn app:app --host 0.0.0.0 --port 8901 &
